# Notion API配置
NOTION_PAGE_ID=your_notion_page_id
NOTION_ACCESS_TOKEN=your_notion_access_token

# Google Analytics配置
GA_MEASUREMENT_ID=your_ga_measurement_id

# API加密配置
# 是否启用API加密 (true/false)
API_ENCRYPTION_ENABLED=false

# 加密算法 (推荐: aes-256-cbc)
API_ENCRYPTION_ALGORITHM=aes-256-cbc

# 加密密钥 (必须是32字节长度的字符串)
# 强烈建议使用随机生成的密钥，例如使用以下命令生成:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
API_ENCRYPTION_SECRET_KEY=your_secret_key_must_be_32_bytes_long

# 初始化向量 (必须是16字节长度的字符串)
# 强烈建议使用随机生成的IV，例如使用以下命令生成:
# node -e "console.log(require('crypto').randomBytes(16).toString('hex'))"
API_ENCRYPTION_IV=your_iv_must_be_16_bytes_long
